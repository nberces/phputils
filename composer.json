{
  "name": "nberces/phputils",
  "type": "library",
  "description": "A collection of utility classes to help with the day-to-day stuff.",
  "license": "MIT",
  "authors": [
    {
      "name": "Nicolas Berces",
      "email": "hello@nberces.dev"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=7.1",
    "symfony/options-resolver": "^4.0|^5.0"
  },
  "require-dev": {
    "nberces/php-cs-fixer-config": "^1.00",
    "squizlabs/php_codesniffer": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "NBerces\\PHPUtils\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "NBerces\\PHPUtilsTests\\": "tests/"
    }
  }
}
